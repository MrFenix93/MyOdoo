<odoo>
    <data>
        <record id="view_cash_treasury_report_line_tree" model="ir.ui.view">
            <field name="name">cash.treasury.report.line.tree</field>
            <field name="model">cash.treasury.report.line</field>
            <field name="arch" type="xml">
                <list string="Treasury Report" create="false" delete="false" edit="false">
                    <field name="date"/>
                    <field name="account_id"/>
                    <field name="journal_id"/>
                    <field name="name"/>
                    <field name="move_type"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance_str" string="Balance After Transaction"/>
                </list>
            </field>
        </record>

<record id="view_cash_treasury_report_line_search" model="ir.ui.view">
    <field name="name">cash.treasury.report.line.search</field>
    <field name="model">cash.treasury.report.line</field>
    <field name="arch" type="xml">
        <search string="Treasury Report Search">
	       <field name="account_id"/>
            <field name="date"/>
            <field name="debit"/>
            <field name="credit"/>

<group expand="0" string="Group By">
                <filter name="group_account" string="Account" context="{'group_by': 'account_id'}"/>
                <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
            </group>

        </search>
    </field>
</record>

<record id="action_cash_treasury_report" model="ir.actions.act_window">
    <field name="name">Treasury Report</field>
    <field name="res_model">cash.treasury.report.line</field>
    <field name="view_mode">list</field>
    <field name="search_view_id" ref="view_cash_treasury_report_line_search"/>
    <field name="context">{'search_default_group_account': 1}</field>
</record>




    </data>
</odoo>
